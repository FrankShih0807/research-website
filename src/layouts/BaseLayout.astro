import "../styles/global.css";
const { title = 'Home' } = Astro.props;
const base = import.meta.env.BASE_URL?.replace(/\/$/, '') || '';
const links = [
  { href: `${base}/`, label: 'Home' },
  { href: `${base}/about`, label: 'About' },
  { href: `${base}/research`, label: 'Research' },
  { href: `${base}/publications`, label: 'Publications' },
  { href: `${base}/talks`, label: 'Talks' },
  { href: `${base}/software`, label: 'Software' },
  { href: `${base}/cv`, label: 'CV' },
  { href: `${base}/contact`, label: 'Contact' },
];
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} · Research</title>
  </head>
  <body>
    <div class="container">
      <nav class="nav">
        <div class="brand">Research</div>
        {links.map((l) => (
          <a href={l.href} class={Astro.url.pathname === new URL(l.href, Astro.site).pathname ? 'active' : ''}>{l.label}</a>
        ))}
      </nav>
      <slot />
      <footer>© {new Date().getFullYear()} · Built with Astro</footer>
    </div>
  </body>
  </html>

